{
  "dependencies": {
    "autoprefixer": "*",
    "esbuild": "*",
    "postcss": "*",
    "sass": "*",
    "tailwindcss": "*"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify"
  }
}
